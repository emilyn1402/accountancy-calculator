<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StarightLineMethod" >

    <TextView
        android:id="@+id/txtmain"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/information"
        android:text="@string/straight"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/skyblue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtdecs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="@string/stdecs"
        android:textSize="14sp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/cfa"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editcfa"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/roundcorner"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/rv"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editrv"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/roundcorner"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10sp" >
            </EditText>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/ula"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editula"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/roundcorner"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10sp" >
            </EditText>

            <TextView
                android:id="@+id/txtassets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/str"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/btncal"
                style="@style/btnStyleShakespeare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="@string/cal"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>